<?xml version='1.0'?>
<!DOCTYPE platform SYSTEM "https://simgrid.org/simgrid.dtd">
<platform version="4.1">
  <actor host="bus_stop_0" function="dagmanager">  
    <!-- Parameter to chose the scheduling strategy for the VMs.
    0: Baseline
    1: BestFit
  -->
  <argument value="0"/>	
      <!-- Area of the solar panels (mÂ²) -->
    <argument value="0.05"/>
    <!-- Efficiency of the solar panels-->
    <argument value="0.15"/>
    <!-- Capacity of the batteries (Wh)-->
    <argument value="40"/>
    <!-- Battery Depth of Discharge-->
    <argument value="0.8"/>
    <!-- Battery charge process efficiency-->
    <argument value="0.85"/>
    <!-- Battery discharge process efficiency-->
    <argument value="0.85"/>
    <!-- input files for the solar traces -->                
    <argument value="input/photo-voltaic/x_0_y_0.csv"/>
    <!-- Cache duration in seconds -->                
    <argument value="-1"/>
    <!-- Output folder -->
    <argument value="output/output_baseline_vieille_toulouse/"/>
    <!-- Request timeout in seconds -->
    <argument value="3600"/>
    <!-- PV panel CO2eq/kwh-->
    <argument value="30.0"/>  <!-- UNECE 2022 for France/europe-->
    <!-- Battery CO2eq/kwh-->
    <argument value="33.0"/>  <!-- NREL -->
    <!-- Local grid co2-->
    <argument value="input/co2eq/FR_2023_hourly.csv"/> 
    <!-- Cloud electricity co2-->
    <argument value="input/co2eq/FR_2023_hourly.csv"/>   
    <!-- initial time for checkpointing-->
    <argument value="-1"/> 

  </actor>
  <actor host="bus_stop_0" function="dagdispatcher"/>
</platform>